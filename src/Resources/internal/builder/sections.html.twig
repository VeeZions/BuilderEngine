<div class="w-full flex flex-col items-center justify-start builder-sections min-h-[2px]">
    {% for section in row.children %}
        {% include 'includes/saas/builder/elements/section.html.twig' %}
    {% endfor %}
</div>
{% if editable is same as true %}
    <div class="mt-2 w-full flex items-center justify-center">
        <span
            data-saas--builder-target="addSection"
            class="flex items-center justify-center cursor-pointer bg-slate-400 rounded-full size-7 border-2 border-slate-300 shadow-md"
            title="{{ 'crud.label.builder.add.section'|trans({}, 'crud') }}"
        >
            {% import 'macros/svg.html.twig' as svg %}
            {{ svg.crud_icon('add', 'medium', 'text-white') }}
        </span>
    </div>
{% endif %}

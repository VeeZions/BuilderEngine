{% macro sort(column) %}
    {% set direction = app.request.query.get('direction') %}
    {% set col = app.request.query.get('sort') %}
    <span class="vbe-icon-sort-wrapper">
        <svg width="8" class="vbe-icon-sort vbe-icon-sort-up{% if direction is same as 'desc' and col is same as column %} selected{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path fill="currentColor" d="M182.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-128 128c-9.2 9.2-11.9 22.9-6.9 34.9s16.6 19.8 29.6 19.8l256 0c12.9 0 24.6-7.8 29.6-19.8s2.2-25.7-6.9-34.9l-128-128z"/>
        </svg>
        <svg width="8" class="vbe-icon-sort vbe-icon-sort-down{% if direction is same as 'asc' and col is same as column %} selected{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path fill="currentColor" d="M182.6 470.6c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-9.2-9.2-11.9-22.9-6.9-34.9s16.6-19.8 29.6-19.8l256 0c12.9 0 24.6 7.8 29.6 19.8s2.2 25.7-6.9 34.9l-128 128z"/>
        </svg>
    </span>
{% endmacro %}
